{
  "name": "lireddit-server",
  "version": "1.0.0",
  "description": "Li Reddit Server",
  "main": "index.js",
  "scripts": {
    "watch": "tsc -w",
    "dev": "nodemon ./dist/index.js",
    "start": "node -r dotenv/config ./dist/index.js",
    "create:migration": "rm -rf src/migrations && rm -rf dist/migrations && npx mikro-orm migration:create",
    "lint:ts": "tslint './src/**/*.ts'",
    "lint:ts:fix": "npm run lint:ts -- --fix"
  },
  "author": "Ayesha",
  "license": "ISC",
  "devDependencies": {
    "@types/connect-redis": "0.0.14",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/node": "^14.14.6",
    "@types/nodemailer": "^6.4.0",
    "@types/redis": "^2.8.28",
    "nodemon": "^2.0.6",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.2.3",
    "@mikro-orm/core": "^4.2.3",
    "@mikro-orm/migrations": "^4.2.3",
    "@mikro-orm/postgresql": "^4.2.3",
    "@types/ioredis": "^4.17.7",
    "@types/uuid": "^8.3.0",
    "apollo-server-express": "^2.19.0",
    "argon2": "^0.27.0",
    "connect-redis": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "graphql": "^15.4.0",
    "ioredis": "^4.19.2",
    "nodemailer": "^6.4.15",
    "pg": "^8.4.2",
    "reflect-metadata": "^0.1.13",
    "tslint": "^6.1.3",
    "type-graphql": "^1.1.0",
    "uuid": "^8.3.1"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
